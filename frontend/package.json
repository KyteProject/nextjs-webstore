{
	"name": "ukemi-store-frontend",
	"version": "1.0.0",
	"main": "index.js",
	"author": "",
	"license": "",
	"scripts": {
		"dev": "next -p 3333",
		"build": "next build",
		"start": "next start",
		"test": "NODE_ENV=test jest --watch",
		"test-win": "SET NODE_ENV=test&& jest --watch",
		"heroku-postbuild": "next build"
	},
	"dependencies": {
		"@babel/core": "^7.3.3",
		"apollo-boost": "^0.1.28",
		"apollo-client": "^2.4.13",
		"babel-plugin-styled-components": "^1.10.0",
		"next": "^8.0.1",
		"prop-types": "^15.7.2",
		"react": "^16.8.2",
		"react-apollo": "^2.4.1",
		"react-dom": "^16.8.2",
		"styled-components": "^4.1.3",
		"styled-system": "^3.2.1"
	},
	"devDependencies": {
		"babel-eslint": "^10.0.1",
		"babel-jest": "^24.1.0",
		"babel-plugin-module-resolver": "^3.2.0",
		"eslint": "^5.14.1",
		"eslint-config-xo": "^0.26.0",
		"eslint-config-xo-nextjs": "^1.3.0",
		"eslint-plugin-import": "^2.16.0",
		"eslint-plugin-jsx-a11y": "^6.2.1",
		"eslint-plugin-react": "^7.12.4",
		"jest": "^24.1.0",
		"jest-transform-graphql": "^2.1.0"
	},
	"jest": {
		"setupTestFrameworkScriptFile": "<rootDir>/jest.setup.js",
		"testPathIgnorePatterns": [
			"<rootDir>/.next/",
			"<rootDir>/node_modules/"
		],
		"transform": {
			"\\.(gql|graphql)$": "jest-transform-graphql",
			".*": "babel-jest",
			"^.+\\.js?$": "babel-jest"
		}
	},
	"babel": {
		"env": {
			"development": {
				"presets": [
					"next/babel"
				],
				"plugins": [
					[
						"styled-components",
						{
							"ssr": true,
							"displayName": true
						}
					]
				]
			},
			"production": {
				"presets": [
					"next/babel"
				],
				"plugins": [
					[
						"styled-components",
						{
							"ssr": true,
							"displayName": true
						}
					]
				]
			},
			"test": {
				"presets": [
					[
						"next/babel",
						{
							"preset-env": {
								"modules": "commonjs"
							}
						}
					]
				],
				"plugins": [
					[
						"styled-components",
						{
							"ssr": true,
							"displayName": true
						}
					]
				]
			}
		}
	}
}
